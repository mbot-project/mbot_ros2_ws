<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mbot">
<material name="black">
    <color rgba="0.2 0.2 0.2 1.0"/>
</material>
<!-- ===================== MAIN BODY =========================== -->

  <link name="base_footprint"/>

  <!-- base link is at the center of the wheel -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.042" rpy="0 0 0"/>
  </joint>

  <!-- CHASSIS -->
  <link name="base_link">
    <visual>
      <geometry> 
        <mesh filename="package://mbot_description/meshes/mbot-classic-simplied.dae"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.04 -0.115 0.005"/>
    </visual>
    <collision>
      <geometry> 
        <box size="0.18 0.13 0.095"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.04 -0.115 0.005"/>
    </collision>
  </link>


  <!-- CAMERA -->
  <link name="camera"/>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera"/>
    <origin xyz="0.05751 0 0.02936" rpy="-1.57 0 -1.57"/>
  </joint>

  <!-- WHEELS -->
  <link name="left_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://mbot_description/meshes/wheel_l.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0115"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.042" length="0.024"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0115"/>
    </collision>
      </link>
  <link name="right_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://mbot_description/meshes/wheel_r.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0115"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.042" length="0.024"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.0115"/>
    </collision>
    
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.085 0" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.085 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>


  <!-- RPLidar A1 (Directly above base_link) -->
  <link name="lidar_link"/>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.14179" rpy="0 0 3.14"/>
  </joint>

</robot>